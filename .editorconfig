# EditorConfig is awesome: <http://editorconfig.org/>

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true

[*.hbs]
insert_final_newline = false

[Makefile]
indent_style = tab

[{package.json,*.yml}]
indent_size = 2
indent_style = space
